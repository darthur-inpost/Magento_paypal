///
// check_fields
//
// check to see if the Shipping method is InPost and if the user has left the
// mobile or locker machine ID empty.
//
function check_fields()
{
	if(jQuery('#shipping_method').val() == 'inpostparcels_inpostparcels')
	{
		if(jQuery('#shipping_inpostparcels').val() == '')
		{
			alert('Please fill in the Locker ID.');
			return false;
		}
		if(jQuery('#inpostparcels_phone').val() == '')
		{
			alert('Please fill in the mobile number.');
			return false;
		}
	}
	// Save the Machine ID into our hidden field that is on the correct
	// form.
	jQuery('#inpost_hidden_machine').val(jQuery('#shipping_inpostparcels').val());
	jQuery('#inpost_hidden_mobile').val(jQuery('#inpostparcels_phone').val());
	// The address field contains the ';' seperate fields.
	// e.g. Airdrie;Glen Road;1;false
	jQuery('#inpost_hidden_details').val(
		jQuery('#address').val()
	);

	// We are good to submit
	jQuery( "#review_button" ).submit();
	return true;
}

///
// showShipping
//
function showShipping()
{
	jQuery('#inpost_locker_div').show();
}

///
// hideShipping
//
function hideShippingAll()
{
	jQuery('#inpost_locker_div').hide();
}

///
// document.ready
//
// @brief Display InPost fields as required.
//
jQuery(document).ready(function() {

	if(jQuery('#shipping_method').val() == 'inpostparcels_inpostparcels')
	{
		showShipping();
	}
	else
	{
		hideShippingAll();
	}

	jQuery('#shipping_method').change(function() {

		if(jQuery('#shipping_method').val() == 'inpostparcels_inpostparcels')
		{
			showShipping();
		}
		else
		{
			hideShippingAll();
		}
	});
});
